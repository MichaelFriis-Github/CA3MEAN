extends layout
block content
    h2 All Orders
    ol
        div.container
            div.col-md-12
                table.table.table-striped.table-hover.table-bordered
                    thead
                        div.btn-group
                            button#Black(
                            type='submit'
                            style='color: green; background-color: pink;'
                            onclick="location.href='http://localhost:3000'"
                            ) Back
                            tr
                                th ID
                                th Date
                                th Name
                                th Address
                                th Delete
                        each s in orders
                            tr
                                td
                                    a(href='./partials/orderdetail/' + s.id) #{s.id}
                                td= s.orderDate
                                td= s.shipName
                                td= s.shipAddress
                                td(style='text-align: center;')
                                    span.glyphicon.glyphicon-remove