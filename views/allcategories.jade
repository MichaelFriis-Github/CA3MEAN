extends layout
block content
    h2 All Categories
    ol
        div.container
            div.col-md-12
                table.table.table-striped.table-hover.table-bordered
                    thead
                        div.btn-group
                            button#Black(
                            type='submit'
                            style='color: green; background-color: pink;'
                            onclick="location.href='http://localhost:3000'"
                            ) Back
                            tr
                                th ID
                                th name
                                th description
                        each s in categories
                            tr
                                td
                                    a(href='./partials/categorydetail/' + s.id) #{s.id}
                                    td= s.name
                                    td= s.description