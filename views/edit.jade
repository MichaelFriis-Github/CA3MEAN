extends layout
block content
    h2 All Orders
    ol
        div.container
            div.col-md-12
                table.table.table-striped.table-hover.table-bordered
                    thead
                            tr
                                th Name
                                th Address
                        each s in orders
                            tr
                                td= s.shipName
                                td= s.shipAddress

                form(action='',method='post')
                    div
                        label(for='name') Name
                            input(id='name',type='text',value='',placeholder='',name='name')
                    div
                        label(for='password') Address
                            input(id='address',type='text',value='',placeholder='',name='address')
                    div
                        input(type='submit',value='Change',data-transition='fade', data-theme='c')

        a.btn.btn-large.btn-success(href="/../", role="button", data-toggle="modal") Go to Frontpage    