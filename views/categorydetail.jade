extends layout
block content
    h2 Category Detail
    ol
        div.container
            div.col-md-12
                table.table.table-striped.table-hover.table-bordered
                    thead
                        div.btn-group
                            button#Black(
                            type='submit'
                            style='color: green; background-color: pink;'
                            onclick="location.href='http://localhost:3000'"
                            ) Back
                            tr
                                th ID
                                th Name
                                th CategoryId
                                th QuantityPerUnit
                                th Units Price
                                th UnitsInStock
                                th UnitsOnOrder
                                th ReorderLevel
                                th Discontinued

                        each s in categorydetail
                            tr
                                td= s.id
                                td= s.name
                                td= s.categoryId
                                td= s.quantityPerUnit
                                td= s.unitPrice
                                td= s.unitsInStock
                                td= s.unitsOnOrder
                                td= s.reorderLevel
                                td= s.discontinued