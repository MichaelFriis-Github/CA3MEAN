extends layout
block content
    h2 Order Detail
    ol
        div.container
            div.col-md-12
                table.table.table-striped.table-hover.table-bordered
                    thead
                            tr
                                th OrderId
                                th ProductId
                                th UnitPrice
                                th Quantity
                                th Discount
                                th ID
                        each s in orderdetail
                            tr

                                    td= s.orderId
                                    td= s.productId
                                    td= s.unitPrice
                                    td= s.quantity
                                    td= s.discount
                                    td= s._id
                                    
            a.btn.btn-large.btn-success(href="/../", role="button", data-toggle="modal") Go to Frontpage        
